@namespace MudBlazor.Docs.Examples



<MudTimeline>
    <MudTimelineItem>
        <MudText>Item A</MudText>
    </MudTimelineItem>
    <MudTimelineItem HideDot="true">
        <MudText Align="Align.End">Hidden Dot</MudText>
    </MudTimelineItem>
